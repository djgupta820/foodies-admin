<% layout('layout/admin') %>
    <section class="mb-4">
        <div class="container-fluid">
            <h3 class="mt-4 mx-2">Briyani</h3>
            <div class="items">
                <% for(let item of items) {%>
                    <% if(item.category === 'Briyani') {%>
                        <div class="card m-2">
                            <img class="card-img-top" src="<%= item.image %>" alt="Briyani-Image" style="max-height: 10rem;">
                            <div class="card-body">
                                <h6 class="card-title" style="color: green;"><%= item.name %> <font class="text-muted" size="2px">(<%= item.category %>)</font></h6>
                                <h6 style="color: red;"> &#8377; <%= item.price %> </h6>
                                <p class="card-text" style="max-height: 2rem; overflow: hidden;"> <%= item.description %> </p>
                                <a href="/admin/<%= item._id %>/view" class="btn btn-primary">view</a>
                            </div>
                        </div>
                <% } }%>
            </div>

